{
  "name": "website-change-monitor",
  "description": "An AWS SAM application to regularly monitor a web page for changes",
  "version": "1.0.0",
  "private": true,
  "devDependencies": {
    "@types/aws-lambda": "^8.10.59",
    "@types/jest": "^26.0.4",
    "@types/node": "^14.0.23",
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.6.1",
    "aws-sdk": "^2.814.0",
    "aws-sdk-mock": "^5.1.0",
    "eslint": "^7.4.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-jest": "^23.18.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^26.1.0",
    "nock": "^13.0.2",
    "prettier": "^2.0.5",
    "ts-jest": "^26.1.3",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  },
  "files": [
    "dist",
    "src",
    "__tests__"
  ],
  "scripts": {
    "compile": "tsc",
    "test": "jest",
    "coverage": "jest --silent --coverage",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "deploy": "npm run compile && sam build && sam deploy",
    "monitor": "sam logs --name CheckWebPageLambdaFunction --stack-name check-web-page-app --tail || true"
  },
  "dependencies": {
    "node-html-parser": "^1.2.20"
  }
}

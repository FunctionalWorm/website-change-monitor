{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2017",
    "preserveConstEnums": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "sourceMap": true,
    "strict": true,
    "resolveJsonModule": true
  },
  "typeRoots": ["node_modules/@types"],
  "types": ["node"],
  "include": ["src/**/*", "runners/**/*"],
  "exclude": ["node_modules"],
  "inlineSourceMap": true
}
